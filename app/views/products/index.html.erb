<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>

<h1>Products</h1>
<h3> <%= link_to 'New Product', new_product_path %> </h3>
<table>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even')%>">
        <td>
          <%= image_tag(product.image, size: "100x100") %>
        </td>

        <td class="list_description">
          <dl>
            <dt><%= product.name %></dt>
            <dd>
              <%= product.description %>
              <br><br>
              Price: $<%= product.price %>
            </dd>
          </dl>
        </td>


        <td class="list_actions">
          <%= link_to 'Show', product %>
            |
          <%= link_to 'Edit', edit_product_path(product) %>
          <%
=begin%>
 |
          <%= link_to "Destroy", product_path(product) , data: {method: :delete,confirm: "Are you sure?"} %>
          <%= link_to "Destroy this product", product_path(product), method: :delete %>
          <%= link_to 'delete', controller: "product", action: "destroy", id: product.id , data: { confirm: 'Are you sure?' }, method: :delete %> 
<%
=end%>
        </td>
      </tr>
    <% end %>
</table>

